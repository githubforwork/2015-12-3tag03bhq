<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_margin="10dip"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip" >

                <TextView
                    android:id="@+id/tv_ZSBT"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/news_listitem_commentCount"
                    android:layout_toRightOf="@id/news_listitem_flag"
                    android:singleLine="true"
                    android:text="暂无"
                    android:textColor="@color/bg_text"
                    android:textSize="@dimen/size_15" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_top"
                android:layout_marginBottom="@dimen/size_25"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_ZSZY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:scrollbarStyle="outsideInset"
                    android:text="暂无"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dip" >

                <ImageView
                    android:id="@+id/tv_fxsj_tip"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:background="@drawable/version" />

                <TextView
                    android:id="@+id/tv_RKSJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/tv_fxsj_tip"
                    android:scrollbarStyle="outsideInset"
                    android:text="未知"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>