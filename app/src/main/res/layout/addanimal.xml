<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        layout="@layout/titlebar_addanimal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:stretchColumns="1" >

            <!-- 名称 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:text="名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入名称"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 样线号 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="样线号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入样线号"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 性别 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择性别"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 数量 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="数量"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择数量"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 行为 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="行为"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择行为"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 粪便 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="粪便"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择粪便"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 粪便数量 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="粪便数量"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择粪便数量"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 粪便新鲜度 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="粪便新鲜度"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_colum"
                    android:layout_span="3"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请选择粪便新鲜度"
                    android:paddingLeft="40dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_colum" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 脚印图片 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="脚印照片"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_span="2" >

                    <LinearLayout
                        android:id="@+id/ll_jy_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/imgbtn_jy_addpicture"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:background="@null"
                    android:src="@drawable/plus" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 粪便图片 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="粪便照片"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_span="2" >

                    <LinearLayout
                        android:id="@+id/ll_fb_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/imgbtn_fb_addpicture"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:background="@null"
                    android:src="@drawable/plus" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
            <!-- 视频 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/width_colum"
                    android:layout_height="120dip"
                    android:gravity="left|center_vertical"
                    android:text="现场视频"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_colum" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_span="2" >

                    <LinearLayout
                        android:id="@+id/ll_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/imgbtn_addvideo"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:background="@null"
                    android:src="@drawable/plus" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>